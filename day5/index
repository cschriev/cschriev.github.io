<html>
<head>
	<title>jQurey</title>
<script type="text/javascript" src="C:\Users\Cathrin\Desktop/jquery-1.11.3.js"></script>
 
<script type="text/javascript">
 
	$(document).ready(function(){

        console.log("jQuery is working");   
        
        var sampleNum;
          $("#sampleButton").click(function(){
             sampleNum = $("#sampleQuery").val();
            console.log(sampleNum)
            });
 
		

        $("button").click(function(){
            console.log(sampleNum)

            var cities = $(this).text();
            console.log(cities);

        var flickrURL = "http://api.flickr.com/services/feeds/photos_public.gne?jsoncallback=?";

        $.ajax({
        url: flickrURL,
        dataType: "jsonp",
        data: {
            tags: cities,
            format : 'json',
        },
        success: function(flickrData) {
            console.log(flickrData.items)

            var htmlImage = "";
            var newArray = []
            var resultsArray = flickrData.items
        for (var i = 0; i < sampleNum; i++){
        var track = resultsArray[i].media.m;
        console.log(track);
        htmlImage+="<img src='"+track+"'>";
        newArray.push(track);
                        }
            var newHtmlImage=""
        
        $("#searchResults").append(htmlImage);

    
        $("button").click(function(){
        $("p").empty();
        });

    }
        });
        });

});
 

	</script>
</head>
<body>
